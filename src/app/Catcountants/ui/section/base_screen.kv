#:kivy 2.3.1

#:import MDBoxLayout kivymd.uix.boxlayout
#:import MDScreen kivymd.uix.screen
#:import MDTopAppBar kivymd.uix.appbar.MDTopAppBar
#:import MDNavigationBar kivymd.uix.navigationbar

<BaseScreen>:
    name: "base"

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: self.theme_cls.secondaryContainerColor

        MDTopAppBar:
            type: "small"

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"

            MDTopAppBarTitle:
                text: "首頁"

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "dots-vertical"

        MDScreen:
            size_hint: 1, 1
        
        MDNavigationBar:
            MDNavigationItem:
                MDNavigationItemIcon:
                    icon: "home-variant"
                MDNavigationItemLabel:
                    text: "Home"
            MDNavigationItem:
                MDNavigationItemIcon:
                    icon: "notebook"
                MDNavigationItemLabel:
                    text: "Journal"
            MDNavigationItem:
                MDNavigationItemIcon:
                    icon: "chart-line"
                MDNavigationItemLabel:
                    text: "Report"
            MDNavigationItem:
                MDNavigationItemIcon:
                    icon: "cog"
                MDNavigationItemLabel:
                    text: "Settings"
